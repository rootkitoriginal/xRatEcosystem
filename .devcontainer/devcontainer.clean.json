{
	"name": "üêÄ xRat Ecosystem - Clean DevContainer",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"workspaceFolder": "/workspaces/xRatEcosystem",
	"hostRequirements": {
		"cpus": 2,
		"memory": "4gb",
		"storage": "32gb"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			},
			"extensions": [
				"ms-vscode.vscode-json"
			]
		}
	},
	"forwardPorts": [3000],
	"runArgs": [
		"--memory=4g",
		"--memory-swap=6g",
		"--cpus=2",
		"--shm-size=512m"
	],
	"remoteUser": "vscode",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspaces/xRatEcosystem,type=bind,consistency=delegated"
	],
	"containerEnv": {
		"VSCODE_SERVER_TAR_PATH": "/tmp/vscode-server.tar.gz",
		"NODE_OPTIONS": "--max-old-space-size=2048",
		"VSCODE_CLEAN_EXTENSION_STORAGE": "true"
	},
	"userEnvProbe": "none",
	"updateRemoteUserUID": true,
	"onCreateCommand": "mkdir -p /tmp/vscode-extension && bash /workspaces/xRatEcosystem/.devcontainer/fix-vscode-permissions.sh",
	"initializeCommand": "bash $(pwd)/.devcontainer/prepare-environment.sh"
}