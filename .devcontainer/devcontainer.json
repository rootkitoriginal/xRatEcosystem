{
	"name": "üêÄ xRat Ecosystem - Dev Container",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"workspaceFolder": "/workspace",
	"hostRequirements": {
		"cpus": 2,
		"memory": "4gb",
		"storage": "32gb"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		},
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"ms-vscode.vscode-json"
			]
		}
	},
	"forwardPorts": [3000, 5173, 80, 27017, 6379],
	"runArgs": [
		"--memory=4g",
		"--memory-swap=6g",
		"--cpus=2",
		"--shm-size=512m"
	],
	"remoteUser": "vscode",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
	],
	"containerEnv": {
		"NODE_OPTIONS": "--max-old-space-size=2048"
	},
	"postCreateCommand": "chmod +x ./xrat.sh && chmod +x ./.devcontainer/install-tools.sh && ./.devcontainer/install-tools.sh && echo 'üêÄ xRat Ecosystem DevContainer ready!'"
}