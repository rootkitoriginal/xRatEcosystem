{
  "name": "xrat-ecosystem",
  "version": "1.0.0",
  "description": "xRat Ecosystem - Docker-based isolated environment with Node.js backend, React frontend, MongoDB, and Redis",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "prepare": "node -e \"try{require('husky')()}catch(e){}\"",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:smoke": "jest --config jest.config.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v --remove-orphans",
    "monitor": "node bin/monitorDevOps.js",
    "monitor:prs": "node bin/monitorDevOps.js"
  },
  "devDependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/jest": "^30.0.0",
    "husky": "^9.0.11",
    "jest": "^30.2.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "backend/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "frontend/**/*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "xrat",
    "ecosystem",
    "docker",
    "node",
    "react",
    "mongodb",
    "redis"
  ],
  "author": "xRat Ecosystem Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
